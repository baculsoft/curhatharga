<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/view_150dp"
                                    android:layout_margin="@dimen/view_8dp"
                                    app:cardBackgroundColor="@color/teal_500"
                                    app:cardCornerRadius="@dimen/view_4dp"
                                    app:cardElevation="@dimen/view_6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/view_96dp"
            android:layout_height="@dimen/view_96dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_6dp"
            android:layout_marginRight="@dimen/view_6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_4dp"
                android:textColor="@color/grey_100"
                android:textSize="@dimen/text_12sp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_4dp"
                android:layout_marginTop="@dimen/view_4dp"
                android:textColor="@color/grey_100"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_4dp"
                android:textColor="@color/grey_100"
                android:textSize="@dimen/text_14sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>