<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pantau_trend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_16dp"
        android:gravity="center"
        android:textColor="@color/teal_500"
        android:textSize="@dimen/text_18sp"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_384dp"
        android:layout_margin="@dimen/view_16dp"
        app:cardBackgroundColor="@color/teal_500"
        app:cardCornerRadius="@dimen/view_4dp"
        app:cardElevation="@dimen/view_6dp">

        <com.db.chart.view.LineChartView
            android:id="@+id/lcv_pantau_trend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/view_16dp"
            android:layout_marginEnd="@dimen/view_16dp"
            android:layout_marginLeft="@dimen/view_4dp"
            android:layout_marginRight="@dimen/view_16dp"
            android:layout_marginStart="@dimen/view_4dp"
            android:layout_marginTop="@dimen/view_16dp"/>
    </android.support.v7.widget.CardView>
</LinearLayout>