<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300"
    android:orientation="vertical"
    tools:context="id.sikerang.mobile.kawalperubahan.KawalPerubahanActivity">

    <include
        android:id="@+id/toolbar_app"
        layout="@layout/toolbar_app"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_128dp"
                android:background="@color/teal_500"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_date_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_2dp"
                android:layout_marginLeft="@dimen/view_8dp"
                android:layout_marginStart="@dimen/view_8dp"
                android:layout_marginTop="@dimen/view_8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp"/>

            <TextView
                android:id="@+id/tv_title_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_8dp"
                android:layout_marginLeft="@dimen/view_8dp"
                android:layout_marginStart="@dimen/view_8dp"
                android:layout_marginTop="@dimen/view_2dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_content_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>